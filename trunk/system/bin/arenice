#!/system/bin/sh
#
# Automatic Renice Phone
# by Wes Garner <wesgarner@gmail.com>
# for OpenEclair / SpareParts
#

ARENICE=`getprop persist.service.auto.renice`

while [ $ARENICE ]
do
		busybox renice -15 `pidof com.android.mms`;
		busybox renice -15 `busybox pidof com.android.contacts`;
		
		busybox renice -15 `pidof com.android.launcher`;
		busybox renice -15 `pidof com.android.launcher2`;
		busybox renice -15 `pidof com.htc.launcher`;
		
		busybox renice -18 `pidof com.android.phone`;
		
		busybox renice -16 `pidof android.process.media`;
		busybox renice -16 `pidof mediaserver`;
		
		busybox renice -10 `busybox pidof com.android.browser`;
		busybox renice -12 `busybox pidof com.android.settings`;
		
		#busybox renice -10 `pidof com.htc.music`;
		#busybox renice -10 `pidof com.android.music`;
		
		busybox renice 5 `pidof com.google.process.gapps`;
		busybox renice 5 `pidof com.google.android.apps.uploader`;
		
		sleep 500
done;