#!/system/bin/sh.old
# Give us props if you use any of our stuff
# follow good open source etiquette
# thanks from Team Synergy
# 
#
busybox mount -o remount,rw -t auto /system;
busybox mount -o remount,rw -t auto /data;
export LOG_FILE=/cache/dcboot.log;
export swapping=`getprop dc.swap.active`;
export swapto=`getprop dc.swap.swpto`;
export swappy=`getprop dc.swap.swappiness`;
SYNERGYROM=1;
###############################
#Starting Swap Checks
###############################
if [ $swapping = "true" ]; 
then
	if [ $swapto = "swppart" ];
	then
		echo "[ ] Searching for Swap Partition" | tee -a $LOG_FILE;
		if [ -e /dev/block/mmcblk1p3 ] 
		then
		    swappy=`getprop dc.swap.swappiness`;
			echo "[!] Swap Partition Found...Turning on swap." | tee -a $LOG_FILE;
			swapon /dev/block/mmcblk1p3;
			sysctl -w vm.swappiness=$swappy;
		else
			echo "[X] SD Swap Partition not found" | tee -a $LOG_FILE;
		fi;
	fi;
	if [ $swapto = "swpfile" ]; 
	then
		busybox rm /data/swapfile;
		echo "[ ] Creating /data/swapfile " | tee -a $LOG_FILE;
		dd if=/dev/zero of=/data/swapfile bs=1024 count=32000;
		echo "[ ] Prepping /data/swapfile as swap partition" | tee -a $LOG_FILE;
		busybox mkswap /data/swapfile;
		echo "[ ] Swapping on new /data/swapfile" | tee -a $LOG_FILE;
		swapon /data/swapfile;
		echo "[ ] Setting Swappiness" | tee -a $LOG_FILE;
		swappy=`getprop dc.swap.swappiness`;
		sysctl -w vm.swappiness=$swappy;
	fi;
else
		echo "[X] Swapping Disabled by dc.conf" | tee -a $LOG_FILE;
fi;